{{#if recipes}}
<table class="table table-dark" style="margin-top: 1.5rem;">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
        {{#each recipes}}
            <tr>
                <td><a class="recipeDetails" href="/recipes/details/{{_id}}">{{name}}</a></td>
                <td>
                  <a href="/recipes/edit/{{_id}}" class="edit"><i class="fas fa-edit"></i></a>
                  <form action="/recipes/remove/{{_id}}" method="POST">
                        <input type="hidden" name="_method" value="delete">
                        <input type="text" name="recipe" id="recipe" value="{{_id}}" hidden>
                        <button type="submit" id="submitForm" class="delete">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>
  </table>
{{else}}
    <p class="noProduct">Dont have recipes yet.</p>
{{/if}}

<div class="fixed-action-btn">
    <a href="/recipes/add"><i class="fas fa-plus-circle"></i></i></a>
</div>