{{#if shoppingList}}
<br>

<h1>{{shoppingList.name}}:{{shoppingList.totalPrice}}â‚¬ <div class="editShoppingList"><a href="/shoppingList/edit/{{shoppingList._id}}" class="editSL"><i class="fas fa-edit"></i></a></div></h1>


<table class="table table-dark" style="margin-top: 1.5rem;" id="productShoppingList">
    <thead>
      <tr>
        <th scope="col">Name</th>
        <th scope="col">Quantity</th>
        <th scope="col">Price</th>
        <th scope="col">Actions</th>
      </tr>
    </thead>
    <tbody>
        {{#each shoppingList.products}}
            <tr>
                <td>{{name}}</td>
                <td>{{quantity}}</td>
                <td>{{price}}</td>
                <td>
                    <form action="/shoppingList/product/remove/{{../shoppingList._id}}" method="POST" id="removeProductShoppingList">
                        <input type="hidden" name="_method" value="PUT">
                        <input type="text" name="product" id="product" hidden value="{{_id}}">
                        <input type="number" name="quantity" id="quantity" value="{{quantity}}" hidden>
                        <button type="submit" id="submitForm" class="delete">
                            <i class="fas fa-trash"></i>
                        </button>
                    </form>
                </td>
            </tr>
        {{/each}}
    </tbody>
  </table>
{{else}}
    <p class="noProduct">Dont have products yet on the shopping List.</p>
{{/if}}

<div class="fixed-action-btn">
    <a href="/shoppingList/product/add/{{shoppingList._id}}"><i class="fas fa-plus-circle"></i></a>
</div>

<div class="fixed-action-btnRemove">
      <form action="/shoppingList/remove/{{shoppingList._id}}" method="POST" id="removeProductShoppingList">
        <input type="hidden" name="_method" value="DELETE">
        <button id="submitForm" class="delete" type="submit">
           <i class="fas fa-trash"></i>
        </button>
      </form>
</div>