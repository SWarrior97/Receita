<div class="addShoopingList">
    
    <div class="form-container">
        <form action="/product" method="POST">
            <div class="form left">
                <h3>Add Product</h3>
                <label for="name">Name</label>
                <input type="text" name="name" id="name" class="input-city">
                <label for="price">Category</label>
                <select name="category" id="category" class="input-city">
                    {{#each categories}}
                        <option value="{{_id}}">{{name}}</option>
                    {{/each}}
                </select>
                <label for="price">Price</label>
                <input type="number" step="0.01" name="price" id="price" class="input-city">
            </div>
            
            <div >
                <div class="row">
                    <input type="submit" value="Save" class="formBtnSave">
                    <a href="/" class="formBtnCancel">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>