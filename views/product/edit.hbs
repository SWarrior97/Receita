<div class="addShoopingList">
    <div class="form-container">
        <form action="/product/{{product._id}}" method="POST">
            <input type="hidden" name="_method" value="put">
            <div class="form left">
                <h3>Add Product</h3>
                <label for="name">Name</label>
                <input type="text" name="name" id="name" class="input-city" value="{{product.name}}">
                <label for="price">Category</label>
                <select name="category" id="category" class="input-city">
                    {{#each categories}}
                       {{#if (compareStrings ../product.categoryName name)}}
                          <option value="{{_id}}" selected>{{name}}</option>
                       {{else}}
                          <option value="{{_id}}">{{name}}</option>
                      {{/if}}
                    {{/each}}
                </select>
                <label for="price">Price</label>
                <input type="number" step="0.01" name="price" id="price" class="input-city" value="{{product.price}}">
            </div>
            
            <div >
                <div class="row">
                    <input type="submit" value="Save" class="formBtnSave">
                    <a href="/product" class="formBtnCancel">Cancel</a>
                </div>
            </div>
        </form>
    </div>
</div>